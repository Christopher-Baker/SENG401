<body>
    @using (Html.BeginForm("LinkShortener", "Home", FormMethod.Post))
    {
        <h3>Enter URL to shorten</h3>
        <input name="longURL"
               type="url"
               style="width:400px; max-width:400px;">
        <input id="urlButton"
               type="submit"
               value="Get your shortened URLs here!">
    }
    @if ((string)ViewBag.shortURL != null)
    {
        <h3>Shortened URL</h3>
        <!--- <p id="url">@ViewBag.shortURL</p> -->
        <input id="url" type="url" value="@ViewBag.shortURL" style="width:400px; max-width:400px; border:0" readonly />
        <button onclick="copyButton()">Copy To Clipboard</button>
        <script>
            function copyButton() {
                var copyText = document.getElementById("url");
                copyText.select();
                document.execCommand("Copy");
            }
        </script>
    }
</body>